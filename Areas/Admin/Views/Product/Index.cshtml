@using fleurDamour.Models
@model IEnumerable<fleurDamour.Models.Product>

@{
    ViewData["Title"] = "Product Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    FleurDamourContext db = new();
}

<h1>Product Management</h1>

<!-- Nút mở modal Create -->
<p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
        Create new product
    </button>
</p>

<table id="TableData" class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ImgProduct)</th>
            <th>@Html.DisplayNameFor(model => model.Idproduct)</th>
            <th>@Html.DisplayNameFor(model => model.NameProduct)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.Idcategories)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row_@item.Idproduct">
                <td><img src="@item.ImgProduct" alt="Product" style="max-height:50px; border-radius:5px" /></td>
                <td>@Html.DisplayFor(modelItem => item.Idproduct)</td>
                <td>@Html.DisplayFor(modelItem => item.NameProduct)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>
                    @foreach (var cat in item.Idcategories)
                    {
                        <span>@cat.NameCategory</span>
                        @if (item.Idcategories.Last() != cat)
                        {
                            <span> - </span>
                        }
                    }
                </td>
                <td>
                    <!-- Nút mở modal Edit -->
                    <button type="button" class="btn btn-warning edit-product"
                            data-id="@item.Idproduct"
                            data-name="@item.NameProduct"
                            data-img="@item.ImgProduct"
                            data-price="@item.Price"
                            data-quantity="@item.Quantity"
                            data-info="@item.InfoProduct"
                            data-bs-toggle="modal" data-bs-target="#editModal">
                        <i class="fa-regular fa-pen-to-square"></i>
                    </button>

                    <!-- Nút xóa bằng AJAX -->
                    <button type="button" class="btn btn-danger delete-product" data-id="@item.Idproduct">
                        <i class="fa-regular fa-trash-can"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Create -->
<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="createForm">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Product ID</label>
                        <input type="text" id="createId" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Product Name</label>
                        <input type="text" id="createName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Image URL</label>
                        <input type="text" id="createImg" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="number" id="createPrice" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Quantity</label>
                        <input type="number" id="createQuantity" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Edit -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editForm">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editId" />
                    <div class="mb-3">
                        <label class="form-label">Product Name</label>
                        <input type="text" id="editName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Image URL</label>
                        <input type="text" id="editImg" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="number" id="editPrice" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Quantity</label>
                        <input type="number" id="editQuantity" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#TableData").DataTable();

            // Xử lý Create bằng AJAX
            $("#createForm").submit(function (e) {
                e.preventDefault();
                $.post("/Admin/Product/Create", {
                    Idproduct: $("#createId").val(),
                    NameProduct: $("#createName").val(),
                    ImgProduct: $("#createImg").val(),
                    Price: $("#createPrice").val(),
                    Quantity: $("#createQuantity").val()
                }, function (data) {
                    location.reload();
                }).fail(function () {
                    alert("Error creating product.");
                });
            });

            // Xử lý Edit (Lấy dữ liệu vào modal)
            $(".edit-product").click(function () {
                $("#editId").val($(this).data("id"));
                $("#editName").val($(this).data("name"));
                $("#editImg").val($(this).data("img"));
                $("#editPrice").val($(this).data("price"));
                $("#editQuantity").val($(this).data("quantity"));
            });

            // Gửi Edit bằng AJAX
            $("#editForm").submit(function (e) {
                e.preventDefault();
                $.post("/Admin/Product/Edit", {
                    Idproduct: $("#editId").val(),
                    NameProduct: $("#editName").val(),
                    ImgProduct: $("#editImg").val(),
                    Price: $("#editPrice").val(),
                    Quantity: $("#editQuantity").val()
                }, function (data) {
                    location.reload();
                }).fail(function () {
                    alert("Error updating product.");
                });
            });

            // Xử lý Delete bằng AJAX
            $(".delete-product").click(function () {
                var productId = $(this).data("id");
                if (confirm("Are you sure you want to delete this product?")) {
                    $.post("/Admin/Product/Delete?id=" + productId, function (data) {
                        if (data.success) {
                            $("#row_" + productId).fadeOut();
                        } else {
                            alert(data.message);
                        }
                    }).fail(function () {
                        alert("Error deleting product.");
                    });
                }
            });
        });
    </script>
}
