@model IEnumerable<fleurDamour.Models.Category>

@{
    ViewData["Title"] = "Category Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Category Management</h1>

<!-- Nút mở modal Create -->
<p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
        Create new category
    </button>
</p>

<table id="TableData" class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PicCategory)</th>
            <th>@Html.DisplayNameFor(model => model.Idcategory)</th>
            <th>@Html.DisplayNameFor(model => model.NameCategory)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row_@item.Idcategory">
                <td><img src="@item.PicCategory" alt="Picture" style="max-height:50px; border-radius:5px" /></td>
                <td>@Html.DisplayFor(modelItem => item.Idcategory)</td>
                <td>@Html.DisplayFor(modelItem => item.NameCategory)</td>
                <td>
                    <!-- Nút mở modal Edit -->
                    <button type="button" class="btn btn-warning edit-category"
                            data-id="@item.Idcategory"
                            data-name="@item.NameCategory"
                            data-pic="@item.PicCategory"
                            data-bs-toggle="modal" data-bs-target="#editModal">
                        <i class="fa-regular fa-pen-to-square"></i>
                    </button>

                    <!-- Nút xóa bằng AJAX -->
                    <button type="button" class="btn btn-danger delete-category" data-id="@item.Idcategory">
                        <i class="fa-regular fa-trash-can"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Create -->
<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="createForm">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">ID Category</label>
                        <input type="text" id="createId" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Name Category</label>
                        <input type="text" id="createName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Picture URL</label>
                        <input type="text" id="createPic" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Create</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Edit -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editForm">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editId" />
                    <div class="mb-3">
                        <label class="form-label">Name Category</label>
                        <input type="text" id="editName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Picture URL</label>
                        <input type="text" id="editPic" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#TableData").DataTable();

            // Xử lý Create bằng AJAX
            $("#createForm").submit(function (e) {
                e.preventDefault();
                $.post("/Admin/Category/Create", {
                    Idcategory: $("#createId").val(),
                    NameCategory: $("#createName").val(),
                    PicCategory: $("#createPic").val()
                }, function (data) {
                    location.reload();
                }).fail(function () {
                    alert("Error creating category.");
                });
            });

            // Xử lý Edit (Lấy dữ liệu vào modal)
            $(".edit-category").click(function () {
                $("#editId").val($(this).data("id"));
                $("#editName").val($(this).data("name"));
                $("#editPic").val($(this).data("pic"));
            });

            // Gửi Edit bằng AJAX
            $("#editForm").submit(function (e) {
                e.preventDefault();
                $.post("/Admin/Category/Edit", {
                    Idcategory: $("#editId").val(),
                    NameCategory: $("#editName").val(),
                    PicCategory: $("#editPic").val()
                }, function (data) {
                    location.reload();
                }).fail(function () {
                    alert("Error updating category.");
                });
            });

            // Xử lý Delete bằng AJAX
            $(".delete-category").click(function () {
                var categoryId = $(this).data("id");
                if (confirm("Are you sure you want to delete this category?")) {
                    $.post("/Admin/Category/Delete?id=" + categoryId, function (data) {
                        if (data.success) {
                            $("#row_" + categoryId).fadeOut();
                        } else {
                            alert(data.message);
                        }
                    }).fail(function () {
                        alert("Error deleting category.");
                    });
                }
            });
        });
    </script>
}
