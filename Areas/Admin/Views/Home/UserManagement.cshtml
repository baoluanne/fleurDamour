@model IEnumerable<fleurDamour.Models.Account>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">User Management</h1>

<p><button href="#createModal" class="btn btn-primary" data-toggle="modal">Create new user</button></p>

<table id="TableData" class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PicAccount)</th>
            <th>@Html.DisplayNameFor(model => model.Uid)</th>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.AccountName)</th>
            <th>@Html.DisplayNameFor(model => model.Role)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.PicAccount" alt="Avatar" style="max-height:50px; border-radius:5px" /></td>
                <td>@Html.DisplayFor(modelItem => item.Uid)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                <td>@Html.DisplayFor(modelItem => item.Role)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <a class="modal-button" data-modal="EditModal_@item.Uid" href="#"><i class="fa-regular fa-pen-to-square" style="color: #000000; font-size: 200%;"></i></a>
                    <div class="modal" id="EditModal_@item.Uid" style="background-color: rgba(0, 0, 0, 0.6);">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                                    <div class="modal-body">
                                        <input name="Uid" value="@item.Uid" type="hidden" />
                                        <div class="input-group mb-3">
                                            <span class="input-group-text"><i class="fa-solid fa-image"></i></span>
                                            <input class="form-control" type="file" name="PicAccount" />
                                        </div>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input type="text" name="AccountName" class="form-control" value="@item.AccountName" placeholder="Account Name" />
                                        </div>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <select name="Role" class="custom-select">
                                                <option value="User" selected="@(item.Role == "User")">User</option>
                                                <option value="Admin" selected="@(item.Role == "Admin")">Admin</option>
                                            </select>
                                        </div>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                                            <input type="text" name="Email" class="form-control" value="@item.Email" placeholder="Email" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-success">Edit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <a class="modal-button" data-modal="DeleteModal_@item.Uid" href="#"><i class="fa-regular fa-trash-can" style="color: #000000; font-size: 200%;"></i></a>
                    <div class="modal" id="DeleteModal_@item.Uid" style="background-color: rgba(0, 0, 0, 0.6);">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-body">
                                    Are you sure you want to delete <span style="font-weight: bold">@item.UserName</span>?
                                </div>
                                <div class="modal-footer">
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-Uid="@item.Uid">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="number" name="Uid" class="form-control" placeholder="User ID" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" name="UserName" class="form-control" placeholder="Username" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa-solid fa-key"></i></span>
                        <input type="password" name="Password" class="form-control" placeholder="Password" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa-solid fa-image"></i></span>
                        <input class="form-control" type="file" name="PicAccount" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" name="AccountName" class="form-control" placeholder="Account Name" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <select name="Role" class="custom-select">
                            <option value="User">User</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                        <input type="text" name="Email" class="form-control" placeholder="Email" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#TableData").DataTable();
        });
    </script>
}