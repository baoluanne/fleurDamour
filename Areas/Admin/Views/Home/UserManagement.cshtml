@model IEnumerable<fleurDamour.Models.Account>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">User Management</h1>

<!-- Nút mở modal Create -->
<p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
        Create new user
    </button>
</p>

<table id="TableData" class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>Avatar</th>
            <th>UID</th>
            <th>Username</th>
            <th>Account Name</th>
            <th>Role</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row_@item.Uid">
                <td><img src="@item.PicAccount" alt="Avatar" style="max-height:50px; border-radius:5px" /></td>
                <td>@item.Uid</td>
                <td>@item.UserName</td>
                <td>@item.AccountName</td>
                <td>@item.Role</td>
                <td>@item.Email</td>
                <td>
                    <!-- Nút mở modal Edit -->
                    <button type="button" class="btn btn-warning edit-user"
                            data-id="@item.Uid"
                            data-username="@item.UserName"
                            data-account="@item.AccountName"
                            data-role="@item.Role"
                            data-email="@item.Email"
                            data-bs-toggle="modal" data-bs-target="#editModal">
                        <i class="fa-regular fa-pen-to-square"></i>
                    </button>

                    <!-- Nút xóa bằng AJAX -->
                    <button type="button" class="btn btn-danger delete-user" data-id="@item.Uid">
                        <i class="fa-regular fa-trash-can"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Create -->
<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="createForm">
                <div class="modal-header">
                    <h5 class="modal-title">Create New User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" id="createUserName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" id="createPassword" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Account Name</label>
                        <input type="text" id="createAccountName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select id="createRole" class="form-control">
                            <option value="User">User</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" id="createEmail" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Edit -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editForm">
                <div class="modal-header">
                    <h5 class="modal-title">Edit User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editUid" />
                    <div class="mb-3">
                        <label class="form-label">Account Name</label>
                        <input type="text" id="editAccountName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select id="editRole" class="form-control">
                            <option value="User">User</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" id="editEmail" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#TableData").DataTable();

            // Xử lý Create bằng AJAX
            $("#createForm").submit(function (e) {
                e.preventDefault();
                $.post("/Admin/Account/Create", {
                    UserName: $("#createUserName").val(),
                    Password: $("#createPassword").val(),
                    AccountName: $("#createAccountName").val(),
                    Role: $("#createRole").val(),
                    Email: $("#createEmail").val()
                }, function (data) {
                    location.reload();
                }).fail(function () {
                    alert("Error creating user.");
                });
            });

            // Xử lý Edit (Lấy dữ liệu vào modal)
            $(".edit-user").click(function () {
                $("#editUid").val($(this).data("id"));
                $("#editAccountName").val($(this).data("account"));
                $("#editRole").val($(this).data("role"));
                $("#editEmail").val($(this).data("email"));
            });

            // Gửi Edit bằng AJAX
            $("#editForm").submit(function (e) {
                e.preventDefault();
                $.post("/Admin/Account/Edit", {
                    Uid: $("#editUid").val(),
                    AccountName: $("#editAccountName").val(),
                    Role: $("#editRole").val(),
                    Email: $("#editEmail").val()
                }, function (data) {
                    location.reload();
                }).fail(function () {
                    alert("Error updating user.");
                });
            });

            // Xử lý Delete bằng AJAX
            $(".delete-user").click(function () {
                var userId = $(this).data("id");
                if (confirm("Are you sure you want to delete this user?")) {
                    $.ajax({
                        url: "/Admin/Account/Delete",
                        type: "POST",
                        data: { Uid: userId },
                        success: function (data) {
                            if (data.success) {
                                $("#row_" + userId).fadeOut();
                            } else {
                                alert(data.message);
                            }
                        },
                        error: function () {
                            alert("Error deleting user.");
                        }
                    });
                }
            });
        });
    </script>
}
