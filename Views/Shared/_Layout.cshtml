    <style>

        /* Footer Area */
        .footer-area {
            color: #fff;
            font-family: Arial, sans-serif;
            padding: 50px 0;
        }

        /* Section background */
        .contact-area {
            background-size: cover;
            background-position: center;
        }

        /* Menu List Styling */
        .menu-list, .contact-list {
            list-style: none;
            padding: 0;
            margin: 0;
            padding-left: 110px; /* Mặc định trên màn hình lớn */
        }

            .menu-list li, .contact-list li {
                margin-bottom: 15px;
                font-size: 20px;
                display: flex;
                align-items: center;
                padding: 10px;
                border-radius: 8px;
                transition: transform 0.3s, background-color 0.3s;
            }

                .menu-list li:hover, .contact-list li:hover {
                    transform: scale(1.05); /* Phóng to nhẹ */
                    background-color: rgba(255, 255, 255, 0.2); /* Thay đổi màu nền */
                }

                .menu-list li i, .contact-list li i {
                    color: white; /* Màu icon */
                    font-size: 20px;
                    margin-right: 10px;
                }

                .menu-list li a, .contact-list li a {
                    text-decoration: none;
                    color: #fff;
                    transition: color 0.3s;
                }

                    .menu-list li a:hover, .contact-list li a:hover {
                        color: #ffcc00; /* Màu khi hover */
                    }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .menu-list, .contact-list {
                padding-left: 20px; /* Giảm padding trên màn hình nhỏ */
            }

                .menu-list li, .contact-list li {
                    font-size: 16px; /* Giảm kích thước font chữ */
                    flex-direction: column; /* Icon và text xếp chồng nhau */
                    text-align: center;
                }

                    .menu-list li i, .contact-list li i {
                        margin-bottom: 8px; /* Tạo khoảng cách giữa icon và text */
                    }
        }

        @@media (max-width: 480px) {
            .menu-list, .contact-list {
                padding-left: 10px; /* Thêm căn lề nhỏ hơn */
            }

                .menu-list li, .contact-list li {
                    font-size: 14px; /* Nhỏ hơn nữa trên màn hình rất nhỏ */
                    padding: 8px; /* Giảm padding cho phù hợp */
                }

                    .menu-list li i, .contact-list li i {
                        font-size: 18px; /* Giảm kích thước icon */
                    }
        }

    </style>
</head>


<body class="@(currentController == "Account" && currentAction == "Login" ? "login-page" : (currentController == "Account" && currentAction == "Register" ? "register-page" : ""))">

    <!-- Preloader -->
